<div class="login-banner">
  <img src="/images/dashboard-banner.jpg" alt="Login Banner" />
</div>

<div class="auth-container">
  <div class="auth-card">
    <h2>Login to <span class="brand">FitTrack</span></h2>
    <form id="login-form" method="POST" action="/login" autocomplete="off">
      <input type="email" name="email" placeholder="Email" required autocomplete="off" />
    <input type="password" name="password" placeholder="Password" required autocomplete="new-password" />
    <button type="submit">Login</button>
    </form>
    <p class="auth-link">Don't have an account? <a href="/signup">Sign up</a></p>
  </div>
</div>
