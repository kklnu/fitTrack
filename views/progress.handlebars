<div class="card">
  <h2 class="page-title">üìà Progress Logs</h2>

  <div class="workout-actions">
    <a href="/dashboard" class="back-btn">‚Üê Back to Dashboard</a>
    <button class="add-btn" id="openProgressFormBtn">+ Add Log</button>
  </div>

  {{#if progressLogs.length}}
    <table class="workout-table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Weight</th>
          <th>Notes</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each progressLogs}}
          <tr>
            <td>{{date}}</td>
            <td>{{weight}} kg</td>
            <td>{{notes}}</td>
            <td>
              <button class="edit-progress-btn" data-id="{{id}}">Edit</button>
              <button class="delete-progress-btn" data-id="{{id}}">Delete</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No progress logs yet.</p>
  {{/if}}

  <!-- Modal for Add/Edit -->
  <div class="modal" id="progressModal">
    <div class="modal-content">
      <span class="close-btn" id="closeProgressFormBtn">&times;</span>
      <h3 id="progressModalTitle">Add Progress Log</h3>
      <form id="progressForm">
        <input type="hidden" name="id" id="progressId" />
        <input type="date" name="date" required />
        <input type="number" step="0.1" name="weight" placeholder="Weight (kg)" required />
        <input type="text" name="notes" placeholder="Notes" />
        <button type="submit">Save Log</button>
      </form>
    </div>
  </div>
</div>

<script src="/js/progress.js"></script>
